# =================================
# ENVIRONMENT CONFIGURATION
# =================================
ENVIRONMENT=development
DEBUG=True

# =================================
# DATABASE CONFIGURATION
# =================================
DATABASE_URL=postgresql://username:password@localhost:5432/gen_book_db
DB_HOST=db
DB_NAME=gen_book_db
DB_USER=username
DB_PASSWORD=password
DB_PORT=5432

# =================================
# AI SERVICES CONFIGURATION
# =================================
OPENAI_API_KEY=your_openai_api_key_here
REPLICATE_API_TOKEN=your_replicate_api_token_here

# =================================
# PAYMENT SERVICES CONFIGURATION
# =================================

# PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Google Pay
GOOGLE_PAY_MERCHANT_ID=your_google_pay_merchant_id
GOOGLE_PAY_MERCHANT_NAME=High5 Gen Book
GOOGLE_PAY_GATEWAY=example
GOOGLE_PAY_ENVIRONMENT=TEST

# Apple Pay
APPLE_PAY_MERCHANT_ID=your_apple_pay_merchant_id
APPLE_PAY_MERCHANT_DOMAIN=yourdomain.com
APPLE_PAY_SANDBOX=true
APPLE_PAY_CERTIFICATE_PATH=/path/to/certificate

# Amazon Pay
AMAZON_PAY_MERCHANT_ID=your_amazon_pay_merchant_id
AMAZON_PAY_PUBLIC_KEY_ID=your_amazon_pay_public_key_id
AMAZON_PAY_STORE_ID=your_amazon_pay_store_id
AMAZON_PAY_REGION=US
AMAZON_PAY_SANDBOX=true

# =================================
# EMAIL CONFIGURATION
# =================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password

# =================================
# SECURITY CONFIGURATION
# =================================
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key

# =================================
# APPLICATION CONFIGURATION
# =================================
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# =================================
# FILE UPLOAD CONFIGURATION
# =================================
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_FOLDER=uploads/

# =================================
# EXTERNAL API CONFIGURATION
# =================================
API_TIMEOUT=30
MAX_RETRIES=3
